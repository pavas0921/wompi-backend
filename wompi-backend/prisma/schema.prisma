datasource db {
  provider = "postgresql" // o el proveedor que estés usando (mysql, sqlite, etc.)
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Product {
  id         Int       @id @default(autoincrement())
  productName String
  price Float 
  stock Int
  description String
  transactionDetails TransactionDetail[]
}

model Customer {
  id         Int       @id @default(autoincrement())
  fullName String
  address String
  email String
  transactions Transaction[] // Relación inversa
}

model Transaction {
  id         Int       @id @default(autoincrement())
  status TransactionStatus
  date String 
  baseFee String
  deliveryFee String
  customerID Int
  customer    Customer  @relation(fields: [customerID], references: [id])
  transactionDetails TransactionDetail[] // Relación inversa con TransactionDetail
}


model Payments {
  id         Int       @id @default(autoincrement())
  total Float
  date DateTime
  result TransactionStatus
}

model TransactionDetail {
  id             Int         @id @default(autoincrement())
  quantity       Int
  unitPrice      Float
  product        Product     @relation(fields: [productId], references: [id])
  productId      Int
  transaction    Transaction @relation(fields: [transactionId], references: [id])
  transactionId  Int

  @@unique([productId, transactionId])
}

enum TransactionStatus {
  PENDING
  PROCESSING
  COMPLETED
  CANCELLED
}